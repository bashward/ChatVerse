{
  "name": "chatverse",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/web",
    "packages/ui",
    "packages/db"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/web",
    "build": "npm run build -w apps/web",
    "start": "npm run start -w apps/web",
    "lint": "npm run lint -w apps/web",
    "postinstall": "npm install -w apps/web && npm install -w packages/ui && npm install -w packages/db"
  }
}